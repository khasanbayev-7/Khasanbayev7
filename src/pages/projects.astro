<style>
  .projects-hero {
    padding: 120px 0 80px;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 20px;
    color: #94A3B8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .projects-grid-section {
    padding: 0 0 80px;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 32px;
  }

  .project-card {
    background: rgba(51, 65, 85, 0.3);
    border: 1px solid rgba(71, 85, 105, 0.3);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .project-card:hover {
    transform: translateY(-8px);
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .project-card.featured {
    border-color: rgba(59, 130, 246, 0.5);
    background: rgba(59, 130, 246, 0.05);
  }

  .project-image {
    height: 240px;
    overflow: hidden;
    position: relative;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: 24px;
    position: relative;
  }

  .project-badge {
    position: absolute;
    top: -12px;
    left: 24px;
    background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%);
    color: white;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-content h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 12px;
    color: #E2E8F0;
    margin-top: 8px;
  }

  .project-content p {
    color: #94A3B8;
    margin-bottom: 20px;
    line-height: 1.6;
    font-size: 14px;
  }

  .project-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .project-tags span {
    background: rgba(59, 130, 246, 0.1);
    color: #60A5FA;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 12px;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 16px;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #3B82F6;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .project-link:hover {
    color: #60A5FA;
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .projects-hero {
      padding: 100px 0 60px;
    }

    .projects-grid-section {
      padding: 0 0 60px;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .project-image {
      height: 200px;
    }

    .project-links {
      flex-direction: column;
      gap: 12px;
    }
  }
</style>